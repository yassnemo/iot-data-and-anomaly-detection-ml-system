{
  "dashboard": {
    "title": "IoT Anomaly Detection Dashboard",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Events Processed per Second",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(events_processed_total[1m])",
            "legendFormat": "{{status}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "Anomalies Detected per Second",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(anomalies_detected_total[1m])",
            "legendFormat": "Anomalies"
          }
        ]
      },
      {
        "id": 3,
        "title": "Processing Latency",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(processing_latency_seconds_bucket[5m]))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(processing_latency_seconds_bucket[5m]))",
            "legendFormat": "p99"
          }
        ]
      },
      {
        "id": 4,
        "title": "Model Performance",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "model_precision",
            "legendFormat": "Precision"
          },
          {
            "expr": "model_recall",
            "legendFormat": "Recall"
          }
        ]
      },
      {
        "id": 5,
        "title": "Total Events Processed",
        "type": "singlestat",
        "gridPos": {"x": 0, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(events_processed_total)"
          }
        ]
      },
      {
        "id": 6,
        "title": "Total Anomalies Detected",
        "type": "singlestat",
        "gridPos": {"x": 6, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(anomalies_detected_total)"
          }
        ]
      },
      {
        "id": 7,
        "title": "Kafka Consumer Lag",
        "type": "graph",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "kafka_consumer_lag",
            "legendFormat": "{{topic}}-{{partition}}"
          }
        ]
      }
    ],
    "refresh": "5s",
    "time": {
      "from": "now-15m",
      "to": "now"
    }
  }
}
